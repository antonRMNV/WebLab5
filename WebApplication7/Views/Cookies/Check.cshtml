@using ASP5.Models
@{
    var key = ViewContext.RouteData.Values["id"];
}
<style>
    body {
        background-color: cornflowerblue
    }

    form {
        border-radius: 1em;
        background-color: blue;
        height: 240px;
        width: 400px;
        margin: auto;
        margin-top: 1em;
        margin-bottom: 1em;
        display: flex;
        flex-direction: column;
    }

    label {
        font-size: 22px;
        font-weight: 500;
    }

    input {
        font-size: 32px;
        background-color: #B9E4F0;
        border-radius: 1em;
    }

    p {
        text-align: center;
        font-size: 40px;
        font-weight: 900
    }
</style>
<form method="post">
    <div>
        <p>Fill in the form</p>
        <label>Enter a key to check if Cookies contain it</label>
        <br />
        <input type="text" name="key" value="@key" />
    </div>
    <input type="submit" value="Check" />
</form>
